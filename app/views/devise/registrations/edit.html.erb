<%= render "partials/nav" %>
<div class="background-full-blur" style="background-image: url(<%= @user.cover_photo_file_name != nil ? @user.cover_photo.url(:large) : asset_path("nocover.jpg") %>)"></div>

<div class="container-fluid" style="position: relative;">
	<div class="row center-xs">
		<div class="col-lg-6">
			<div class="user-edit-container">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-user-form", autocomplete: "off" }) do |f| %>

				<h2 class="user-edit-heading">Personal Information</h2>
				<ul class="accordion">
					<li>
						<a class="toggle" href="javascript:void(0);"><i class="fas fa-user-circle"></i>&nbsp;&nbsp;Name</a>
						<div class="inner">
							<div class="field">
								<%= f.label :fullname, "Full Name" %><br />
								<%= f.text_field :fullname, placeholder: current_user.fullname, class: "dark" %>
							</div>

							<%= f.submit "Save", class: "button green" %>
						</div>
					</li>
					<li>
						<a class="toggle" href="javascript:void(0);"><i class="fas fa-at"></i>&nbsp;&nbsp;E-Mail Address</a>
						<div class="inner">
							<div class="field">
								<%= f.label :email, "New Email" %><br />
								<%= f.email_field :email, placeholder: "email", class: "dark" %>
							</div>

							<%= f.submit "Save", class: "button green" %>

							<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
							<small>Currently waiting confirmation for: <%= resource.unconfirmed_email %></small>
							<% end %>
						</div>
					</li>
					<li>
						<a class="toggle" href="javascript:void(0);"><i class="fas fa-key"></i>&nbsp;&nbsp;Password</a>
						<div class="inner">
							<div class="field">
								<%= f.password_field :current_password, placeholder: "current password", class: "dark" %>
							</div>
							<br />
							<div class="field">
								<%= f.password_field :password, placeholder: "password", class: "dark" %>
								<% if @minimum_password_length %>
								<br />
								<small>Minimum <%= @minimum_password_length %> characters.</small>
								<% end %>
							</div>

							<div class="field">
								<%= f.password_field :password_confirmation, placeholder: "confirm password", class: "dark" %>
							</div>
							<%= f.submit "Save", class: "button green" %>
						</div>
					</li>
				</ul>

				<h2 class="user-edit-heading">Profile/Cover Photo</h2>

				Profile:
				<%= f.file_field :profile_photo, as: :file %>
				<br />
				Cover:
				<%= f.file_field :cover_photo, as: :file %>

				<%= f.submit "Save", class: "button green" %>

				<h2 class="user-edit-heading">General</h2>
				<ul class="accordion">
					<li>
						<a class="toggle" href="javascript:void(0);"><i class="fas fa-globe"></i>&nbsp;&nbsp;Language/Locale</a>
						<div class="inner">
							<div class="field">
								
							</div>

							<%= f.submit "Save", class: "button green" %>
						</div>
					</li>
					<% end %>
					<li>
						<a class="toggle" href="javascript:void(0);"><i class="fas fa-trash"></i>&nbsp;&nbsp;Delete Account</a>
						<div class="inner">
							<%= button_to "Delete my Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button blue" %>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
