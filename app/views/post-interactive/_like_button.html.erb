<% if post.likes.exists?(user_id: current_user.id) %>
<%= button_tag(:type => 'button', class: "likebutton liked") do %>
<%= link_to raw("<i class='fa fa-heart'></i>"), {:controller => "posts", :action => "unlike", :post_id => post.id, :user_id => current_user.id} , :method => :post, remote: true %>
<% end %>
<% else %>
<%= button_tag(:type => 'button', class: "likebutton") do %>
<%= link_to raw("<i class='fa fa-heart'></i>"), {:controller => "posts", :action => "like", :post_id => post.id, :user_id => current_user.id} , :method => :post, remote: true %>
<% end %>
<% end %>
