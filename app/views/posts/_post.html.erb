<div class="post">
	<div class="header">
		<div class="left">
			<div class="profile" style="background-image: url(<%= post.user.profile_photo_file_name != nil ? post.user.profile_photo.url(:small) : asset_path("nophoto.png") %>)"></div>

			<div class="user">
				<%= link_to post.user.fullname, user_path(post.user_id), class: "link" %>
				<span class="activity">
					<% if post.image_file_name == nil %>
					made a <strong>post</strong>.
					<% else %>
					shared a <strong>photo</strong>.
					<% end %>
				</span>
			</div>
		</div>
		<div class="right">
			<div class="ext">
				<%= time_ago_in_words(post.created_at) %> ago
			</div>
		</div>
	</div>

	<div class="body">
		<% if post.image_file_name != nil %>
		<a class="link image-lightbox" href="<%= post.image.url(:large) %>" data-fancybox>
			<div class="image" style="background-image: url(<%= post.image.url(:medium) %>)">
			</div>
		</a>
		<% end %>

		<div class="content">
			<% if !post.title.empty? %><h1><%= post.title %></h1><% end %>
			<% if !post.content.empty? %><p><%= post.content %></p><% end %>
		</div>

		<div class="interactive">
			<div class="stats">
				<div class="col-left">
					<i class="fa fa-heart likestats"></i>
					<span class="likedetails" id="likes_for_post<%= post.id %>">
						<%= render "post-interactive/like_stats", post: post %>
					</span>
				</div>
				<div class="col-right" id="comments_for_post<%= post.id %>">
					<%= render "post-interactive/comment_button", post: post %>
				</div>
			</div>

			<div class="comment-container" id="comment_feed_for_post<%= post.id %>">
				<div class="comment-list">
					<%= render post.comments.order("DATE(updated_at), id asc"), post: post %>
				</div>
			</div>

			<div class="actions">
				<div class="comment-box">
					<%= form_for :comment, url: :comments, :remote => true do |f| %>
					<%= hidden_field_tag "comment[post_id]", "#{post.id}" %>
					<%= f.text_field :content, placeholder: 'Write a comment...', class: 'comment-field sent', id: "comment_field_for_post#{post.id}", :autocomplete => :off %>
					<% end %>
				</div>
				<div class="like-box" id="likebox_for_post<%= post.id %>">
					<%= render "post-interactive/like_button", post: post %>
				</div>
			</div>
		</div>
	</div>
</div>
