$("#likes_for_post<%= @post.id %>").html('<%= j render partial: "post-interactive/like_stats", :locals => {:post => @post} %>');

<% if @post.likes.exists?(user_id: current_user.id) %>

$("#like_post_<%= @post.id %>").addClass("liked");

<% else %>

$("#like_post_<%= @post.id %>").removeClass("liked");

<% end %>