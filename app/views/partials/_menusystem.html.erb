<div class="top-nav">
	<div class="search">
		<i class="fa fa-search search-icon"></i>
		<%= form_tag(searches_path) do %>
		<%= hidden_field_tag "search[user_id]", "#{@current_user.id}" %>
		<%= text_field_tag "search[keywords]", params[:keywords], placeholder: "#{get_search_placeholder}", class: "globalsearch" %>
	<% end %>
</div>

<div class="user">
	<% if logged_in? %>
	<div class="current-user"><%= current_user.fullname %></div>
	<%= button_to "Logout", logout_path, method: :delete, class: "btn-logout" %>
	<% end %>
</div>
</div>
<div class="side-nav">
	<%= link_to(root_url) do %>
	<div class="logo-container">
		<img src="<%= asset_path("logo_shadow.svg") %>" class="logo">
	</div>
	<% end %>
	<div class="profile-image" style="background-image: url(<%= current_user.profile_photo_file_name != nil ? current_user.profile_photo.url(:medium) : asset_path("nophoto.png") %>)"></div>

	<div class="icon-row" id="newpost">
		<i class="fa fa-edit"></i>
	</div>

	<%= link_to(:feed) do %>
	<div class="icon-row">
		<i class="fa fa-bars"></i>
	</div>
	<% end %>
	<%= link_to(:friends) do %>
	<div class="icon-row">
		<i class="fa fa-users shrinkify"></i>
	</div>
	<% end %>
	<%= link_to(current_user) do %>
	<div class="icon-row">
		<i class="fa fa-user"></i>
	</div>
	<% end %>
</div>
